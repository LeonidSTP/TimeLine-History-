<UserControl x:Class="TimeLine.GamesControls.LifeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeLine"
             mc:Ignorable="d" Height="30" Margin="5" Opacity="0.75">
    <Grid>
        <Image x:Name="imageActiveLife" Source="pack://application:,,,/TimeLine;component/Images/activeheart.png" RenderOptions.BitmapScalingMode="HighQuality"/>
        <Image x:Name="imageDisactiveLife" Source="pack://application:,,,/TimeLine;component/Images/disactiveheart.png" RenderOptions.BitmapScalingMode="HighQuality"/>
    </Grid>
</UserControl>
